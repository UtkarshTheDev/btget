{
  "name": "btget",
  "version": "1.0.0",
  "description": "A blazing-fast, modern BitTorrent client for the command line",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "btget": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "CONTRIBUTING.md"
  ],
  "keywords": [
    "bittorrent",
    "torrent",
    "cli",
    "download",
    "p2p",
    "peer-to-peer",
    "fast",
    "typescript",
    "bun"
  ],
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "build": "bun run build.ts",
    "build:bun": "bun run build.ts",
    "build:ts": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "start": "node dist/index.js",
    "cli": "bun run build && bun run start",
    "btget": "bun run build && node dist/index.js",
    "download": "bun run build && node dist/index.js download",
    "info": "bun run build && node dist/index.js info",
    "lint": "biome lint .",
    "format": "biome format .",
    "clean": "rm -rf dist",
    "rebuild": "bun run clean && bun run build",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "prepack": "bun run build",
    "prepublishOnly": "bun run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/UtkarshTheDev/btget.git"
  },
  "bugs": {
    "url": "https://github.com/UtkarshTheDev/btget/issues"
  },
  "homepage": "https://github.com/UtkarshTheDev/btget#readme",
  "author": {
    "name": "Utkarsh",
    "email": "utkarshweb2023@gmail.com",
    "url": "https://github.com/UtkarshTheDev"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "type": "module",
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@types/bencode": "^2.0.4",
    "@types/cli-progress": "^3.11.6",
    "@types/ink-big-text": "^1.2.4",
    "@types/ink-gradient": "^2.0.4",
    "@types/node": "^20.12.7",
    "@types/react": "^19.2.7",
    "@types/yargs": "^17.0.33",
    "bun-types": "latest",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "bencode": "^4.0.0",
    "cli-progress": "^3.12.0",
    "ink": "^6.5.1",
    "ink-big-text": "^2.0.0",
    "ink-gradient": "^3.0.0",
    "ink-spinner": "^5.0.0",
    "ink-table": "^3.1.0",
    "react": "^19.2.0",
    "react-devtools-core": "^7.0.1",
    "react-dom": "^19.2.0",
    "yargs": "^17.7.2"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/UtkarshTheDev"
  },
  "overrides": {
    "ink": {
      "react-devtools-core": "7.0.1"
    }
  }
}
